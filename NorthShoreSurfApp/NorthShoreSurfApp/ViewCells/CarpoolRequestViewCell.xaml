<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:d="http://xamarin.com/schemas/2014/forms/design"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:local="clr-namespace:NorthShoreSurfApp"
          mc:Ignorable="d"
          x:Class="NorthShoreSurfApp.ViewCells.CarpoolRequestViewCell">
    <ViewCell.View>
        <Frame Padding="10"
               CornerRadius="10"
               Margin="10,5,10,5"
               BackgroundColor="{StaticResource NSSBlue}"
               HasShadow="False">
            <Grid Padding="0"
                  Margin="0"
                  RowSpacing="0"
                  ColumnSpacing="0">
                <!--Column definitions-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Left column-->
                <Grid Margin="0"
                      Padding="0"
                      HorizontalOptions="Fill"
                      Grid.Column="0"
                      ColumnSpacing="0"
                      RowSpacing="0">
                    <!--Row definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!--Departure time day-->
                    <Label Text="{Binding DepartureTimeDayString}" 
                           MaxLines="1"
                           LineBreakMode="TailTruncation"
                           TextColor="White" 
                           HeightRequest="20"
                           FontSize="Default"
                           HorizontalOptions="Fill"
                           Grid.Row="0" 
                           />
                    <!--Time interval-->
                    <Label Text="{Binding TimeInterval}" 
                           MaxLines="1"
                           LineBreakMode="TailTruncation"
                           TextColor="White"
                           HeightRequest="20"
                           FontSize="Default"
                           HorizontalOptions="Fill"
                           Grid.Row="1" 
                           />
                </Grid>

                <!--Right column-->
                <Grid Margin="0"
                      Padding="0"
                      HorizontalOptions="Fill"
                      Grid.Column="1"
                      ColumnSpacing="0"
                      RowSpacing="0">
                    <!--Row definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!--Departure city-->
                    <Label Text="{Binding ZipcodeCityString}" 
                           TextColor="White" 
                           MaxLines="1"
                           HeightRequest="20"
                           FontSize="Default"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="End"
                           LineBreakMode="TailTruncation"
                           Grid.Row="0"
                           />
                    <!--Destination zipcode-->
                    <Label Text="{Binding DestinationZipcodeCityString}" 
                           TextColor="White" 
                           MaxLines="1"
                           HeightRequest="20"
                           FontSize="Default"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="End"
                           LineBreakMode="TailTruncation"
                           Grid.Row="2" 
                           />
                    <!--Destination address-->
                    <Label Text="{Binding DestinationAddress}" 
                           TextColor="White" 
                           MaxLines="1"
                           HeightRequest="20"
                           FontSize="Default"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="End"
                           LineBreakMode="TailTruncation"
                           Grid.Row="3" 
                           />

                    <Image Source="ic_location_destination.png"
                           Grid.Row="0"
                           Grid.Column="1"
                           HeightRequest="70"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"
                           Aspect="AspectFit"
                           Grid.RowSpan="4"
                           />

                </Grid>
            </Grid>
        </Frame>
    </ViewCell.View>
</ViewCell>
