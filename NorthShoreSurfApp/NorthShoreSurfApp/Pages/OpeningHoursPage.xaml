<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"            
             IconImageSource="ic_car.png"
             NavigationPage.HasNavigationBar="False"
             xmlns:local="clr-namespace:NorthShoreSurfApp"
             x:Class="NorthShoreSurfApp.OpeningHoursPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <local:CustomNavigationBar x:Name="navigationBar"
                                           BarBackgroundColor="{StaticResource BarBackground}"
                                           ShowBackButton="True"
                                           Title="{local:Translate Home_page}"
                                           TitleColor="Black"
                                           TitleSize="24"
                                           ShowLogo="True"
                                           Logo="ic_logo.png"/>
                <StackLayout Margin="10,10,10,10">
                    <Frame x:Name="OpeningDates"
                           BackgroundColor="#2B3C4E"
                           CornerRadius="10">
                        <StackLayout>
                            <Label Text="Opening hours"
                                   TextColor="#FFAA00"
                                   FontSize="Title"
                                   HorizontalTextAlignment="Center"/>
                            <Label Text="We're open all holidays all year and for bookings - contact us"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   FontSize="Body"/>
                            <Label Text="the whole fucking lineup of dates"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   FontSize="Body"/>
                            <Label Text="Weather might force us to close up sometimes"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   FontSize="Body"/>
                            <Label Text="Our Foodtruck is open in June, July, August, and September"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   FontSize="Body"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
